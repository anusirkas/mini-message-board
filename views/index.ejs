<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Message Board</h1>
  <a href="/new">Add a new message</a>
  <ul>
    <% messages.forEach((msg, i) => { %>
        <li>
            <strong><%= msg.user %>:</strong> <%= msg.text %>
            <em>(<%= msg.added.toLocaleString() %>)</em>
            <a href="/message/<%= i %>">Open</a>
        </li>
    <% }) %>
  </ul>
</body>
</html>
