<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css">

  <!-- Theme restore now, before rendering -->
  <script>
    (() => {
      const saved = localStorage.getItem("theme");
      if (saved === "dark") {
        document.documentElement.classList.add("dark");
      }
    })();
  </script>
</head>

<body>
  <!-- Night/Day toggle -->
  <button id="mode-toggle" class="mode-toggle">🌙</button>

  <div class="message-content" style="margin: 60px auto; max-width: 500px;">
    <h2><%= message.user %></h2>
    <p><%= message.text %></p>
    <p class="timestamp">
      <%= message.added.toLocaleString("en-US", {
        month: "short", day: "numeric", year: "numeric",
        hour: "2-digit", minute: "2-digit"
      }) %>
    </p>
    <p class="back-link"><a href="/">← Back to board</a></p>
  </div>
  <script src="/theme.js"></script>
</body>
</html>