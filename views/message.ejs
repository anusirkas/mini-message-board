<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css">

  <!-- Theme restore kohe, enne renderdamist -->
  <script>
    (() => {
      const saved = localStorage.getItem("theme");
      if (saved === "dark") {
        document.documentElement.classList.add("dark");
      }
    })();
  </script>
</head>

<body>
  <!-- Night/Day toggle -->
  <button id="mode-toggle" class="mode-toggle">🌙</button>

  <div class="message-content" style="margin: 60px auto; max-width: 500px;">
    <h2><%= message.user %></h2>
    <p><%= message.text %></p>
    <p class="timestamp">
      <%= message.added.toLocaleString("en-US", {
        month: "short", day: "numeric", year: "numeric",
        hour: "2-digit", minute: "2-digit"
      }) %>
    </p>
    <p class="back-link"><a href="/">← Back to board</a></p>
  </div>

  <script>
    // Night/Day toggle
    const toggle = document.getElementById("mode-toggle");
    toggle.addEventListener("click", () => {
      document.body.classList.toggle("dark");
      toggle.textContent = document.body.classList.contains("dark") ? "☀️" : "🌙";
      localStorage.setItem("theme", document.body.classList.contains("dark") ? "dark" : "light");
    });

    // Restore theme from localStorage
    if (localStorage.getItem("theme") === "dark") {
      document.body.classList.add("dark");
      toggle.textContent = "☀️";
    }
  </script>
</body>
</html>
